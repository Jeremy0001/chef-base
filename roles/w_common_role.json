{
  "name": "w_common_role",
  "json_class": "Chef::Role",
  "chef_type": "role",
  "default_attributes": {
    "w_common": {
      "vmware-tools_enabled": false,
      "web_apps": [
        {
          "vhost": {
            "main_domain": "examplewebsite.com",
            "aliases": ["www.examplewebsite.com"]
          },
          "webapp_db_connection": {
            "db_domain": "db.examplewebsite.com",
            "webapp_domain": "webapp.examplewebsite.com"
          },
          "mysql": {
            "db": "ex_db",
            "user": "ex_user",
            "password": "ex_pw"
          }
        },
        {
          "vhost": {
            "main_domain": "christiantimes.com",
            "aliases": ["www.christiantimes.com"]
          },
          "webapp_db_connection": {
            "db_domain": "db.christiantimes.com",
            "webapp_domain": "christiantimes.com"
          },
          "mysql": {
            "db": "ctimes",
            "user": "ctimes",
            "password": "ex_pw"
          }
        },
		{
          "vhost": {
			"docroot": "christiantimes.com/manage",
            "main_domain": "manage.christiantimes.com"
          },
		  "webapp_db_connection": {
            "db_domain": "db.christiantimes.com",
            "webapp_domain": "christiantimes.com"
          },
          "mysql": {
            "db": "ctimes",
            "user": "ctimes",
            "password": "ex_pw"
          }
        }
      ]
    }
  },
  "run_list": [
    "recipe[w_common]"
  ]
}